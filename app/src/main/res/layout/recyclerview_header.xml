<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_main_lunar"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.brins.calendar.custom.FontTextView
        android:id="@+id/date_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:font_type="DIN-Bold"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"/>
    <com.brins.calendar.custom.FontTextView
        android:id="@+id/date_lunar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text=""
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/date_num"/>
    <LinearLayout
        android:id="@+id/layout_suit"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/date_lunar"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.brins.calendar.custom.FontTextView
            android:id="@+id/suit_tv"
            android:text="宜"
            android:textColor="@android:color/holo_green_light"
            app:font_type="DIN-Bold"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/date_lunar"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    <com.brins.calendar.custom.FontTextView
        android:id="@+id/suit"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:maxLines="3"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@id/layout_suit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.brins.calendar.custom.FontTextView
        android:id="@+id/taboo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忌"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:font_type="DIN-Bold" />

    <com.brins.calendar.custom.FontTextView
        android:id="@+id/taboo"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:maxLines="3"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

    </LinearLayout>
</RelativeLayout>